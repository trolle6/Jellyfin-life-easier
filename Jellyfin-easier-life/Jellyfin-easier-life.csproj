<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>Jellyfin_easier_life</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Version>1.0.0</Version>
    <Authors>Jellyfin-easier-life</Authors>
    <Description>Jellyfin plugin to replace soft scan with full metadata replacement and add universal settings</Description>
  </PropertyGroup>

  <!-- 
    IMPORTANT: You need to reference Jellyfin server assemblies to build this plugin.
    
    Option 1: Reference from Jellyfin installation (uncomment and update paths):
  -->
  <ItemGroup>
    <!-- Uncomment and update these paths to point to your Jellyfin server installation -->
